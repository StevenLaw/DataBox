<Window x:Class="DataBox.PasswordDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="300" Width="300" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Label Content="Input password" Margin="4"/>
        <PasswordBox x:Name="txtPassword" Margin="4"/>
        <Grid Height="25" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOk" Grid.Column="1" Content="Ok" Width="80" Margin="0,0,4,0" IsDefault="True" Click="btnOk_Click"/>
            <Button Grid.Column="2" Content="Cancel" Width="80" IsCancel="True"/>
        </Grid>
    </StackPanel>
</Window>
